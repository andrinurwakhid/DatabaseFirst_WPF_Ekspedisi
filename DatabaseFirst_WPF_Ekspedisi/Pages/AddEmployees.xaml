        <TextBox x:Name="textBox_Copy" HorizontalAlignment="Left" Height="49" Margin="664,498,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="339" FontSize="30" HorizontalContentAlignment="Center"/>
